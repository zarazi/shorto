<div class="jumbotron text-center">
  <h1 class="display-3">{{ title }}</h1>
  <p class="lead">Shortening any URL</p>
</div>

<div class="card card-body">
  <form action="/shorto" method="POST">
    <div class="form-group">
      <label for="originalUrl">Original Url</label>
      <input type="text" class="form-control" name="originalUrl" placeholder="Enter your url here">
    </div>
    <div class="form-group">
      <label for="shortenName">Shorten Name</label>
      <input type="text" class="form-control" name="shortenName" placeholder="Leave this blank for auto generation">
    </div>
    <button type="submit" class="btn btn-primary">Shorto!</button>
  </form>
</div>